@import "nib"

body
  padding-top 49px
  position    relative

h1
  &.hero
    color         #363636
    font-size     60px
    font-weight   500
    text-align    center
    margin-bottom 22px
    text-shadow   0 1px 1px rgba(0,0,0,0.15)

section
  padding-top 29px

  h1
    padding-bottom 9px
    margin         20px 0px
    border-bottom  1px solid #eeeeee

#top-nav
  background-color #363636
  position         fixed
  top              0
  width            100%
  min-width        700px
  height           49px
  z-index          10
  transform        rotateX(0) rotateY(0)

  #logo
    display inline-block
    height  39px
    padding 10px 0px

    h2
      margin 0px

  .nav-menu
    margin     0 auto
    display    inline-block
    overflow   hidden
    list-style none

    li
      margin-right 10px
      display      inline-block

      a:hover
        text-decoration underline

  a, a:visited, a:active
    display         block
    padding         2px 10px 0
    font-size       14px
    color           #FFF
    text-decoration none

.macgyver-head
  padding-top 10px
  position    relative
  text-align  center

  ul
    display    block
    list-style none

    li
      margin  0px 10px
      display inline

  .macgyver-links
    margin 0px auto 30px auto

.keycode-list
  margin-left 0px
  list-style  none

  li
    float left
    width 25%
    border-bottom 1px solid #F0F0F0
    padding 3px 0px

// Example section css
.docs-example
  position         relative
  margin           15px 0
  padding          39px 19px 14px
  *padding-top     19px
  background-color #fff
  border           1px solid #ddd
  border-radius    4px
  min-height       25px

  &:after
    content          "Example"
    position         absolute
    top              -1px
    left             -1px
    padding          3px 7px
    font-size        12px
    font-weight      bold
    background-color #f5f5f5
    border           1px solid #ddd
    color            #9da0a4
    border-radius    4px 0px 4px 0px

  .mac-menu
    position relative

// Side nav
.docs-sidenav
  margin    30px 0px 0px 0px
  transform rotateX(0) rotateY(0)

  li
    a
      color   #363636
      padding 4px 15px

    &.active
      a, a:hover
        border-color #f9f9f9
        border-left  2px solid #363636

@media (min-width: 992px)
  .docs-sidenav
    &.affix
      top 54px

.footer
  text-align       center
  padding          30px 0
  margin-top       70px
  border-top       1px solid #e5e5e5
  background-color #f5f5f5

  p
    margin-bottom 0
    color         #777

  .footer-links
    margin 10px 0
    li
      display inline
      padding 0 2px
      &:first-child
        padding-left 0

.mac-tag-autocomplete
  width 100%

.date-time
  input
    width 120px

// Taken from Twitter bootstrap prettify
// http://twitter.github.io/bootstrap/assets/js/google-code-prettify/prettify.css
.com
  color #93a1a1
.lit
  color #195f91
.pun, .opn, .clo
  color #93a1a1
.fun
  color #dc322f
.str, .atv
  color #D14
.kwd, .prettyprint .tag
  color #1e347b
.typ, .atn, .dec, .var
  color teal
.pln
  color #48484c

.prettyprint
  padding          8px
  background-color #f7f7f9
  border           1px solid #e1e1e8

.prettyprint.linenums
  box-shadow inset 40px 0 0 #fbfbfc, inset 41px 0 0 #ececf0

.table-view-example__selectable-columns
  background #f7f7f9
  border 1px solid #e1e1e8
  padding 20px
  box-sizing border-box
  border-radius 6px

  hr
    margin 5px 0

.table-view-example__selectable-columns__actions
  list-style none
  margin-left 0

  li a
    background rgba(128, 128, 128, 0.80)
    border-radius 3px
    padding 6px
    margin-right 5px
    color white

    &:hover
      background rgba(128, 128, 128, 0.90)
      text-decoration none

/* Specify class=linenums on a pre to get line numbering */
ol.linenums
  margin 0 0 0 33px /* IE indents via margin-left */

ol.linenums li
  padding-left 12px
  color        #bebec5
  line-height  20px
  text-shadow  0 1px 0 #fff
